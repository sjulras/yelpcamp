<%- include ("../partials/header")%>

   
<div class="container">    
    <div class="row">
        <div class="panel panel-default">
        <div class="panel-heading">  <h4 >User Profile</h4></div>
         <div class="panel-body">
        <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
         <img alt="User Pic" src="<%= user.avatar %> " id="profile-image1" class="img-circle img-responsive"> 
       
   
        </div>
        <div class="col-md-8 col-xs-12 col-sm-6 col-lg-8" >
            <div class="container" >
              <h2><%= user.firstName+" "+ user.lastName %> </h2>
              <%if (user.isAdmin){ %> 
                <p>Role<b> Administrator</b></p>
              <% } else {%> 
                <p>Role<b> User</b></p>
              <% }%> 
              
              
            
             
            </div>
             <hr>
            <ul class="container details" >
              <li><p><span class="glyphicon glyphicon-user one" style="width:50px;"></span><%= user.username %> </p></li>
              <li><p><span class="glyphicon glyphicon-envelope one" style="width:50px;"></span><%=user.email %></p></li>
            </ul>
            <hr>
            <div class="col-sm-5 col-xs-6 tital " >Joined: <%=moment(user.created).format("dddd, MMMM Do YYYY,")%></div>
        </div>
      </div>


        </div>
<div class="container">
<div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">  <h4 ><%= user.firstName.charAt(0).toUpperCase() + user.firstName.slice(1)%>'s Campgrounds </h4></div>
     <div class="panel-body">
  <%camp.forEach(function (camp) {%> 

    
  <div class="col-sm-6 col-md-3">

  
    <div class="thumbnail">
      <img id="smi"src="<%= camp.image %> " alt="...">
      <div class="caption">
        <h3><%= camp.name %> </h3>
       
        <p><a href="/campgrounds/<%= camp.id %> " class="btn btn-primary" role="button">Visit</a> </p>
      </div>
    </div>
    </div>
  
    <% }) %> 
  </div>

</div>

  
  
</div>
</div>




<%- include ("../partials/footer")%>