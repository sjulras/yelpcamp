

<%- include ("../partials/header.ejs")%>



    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to the Albanian Camps</h1>
            <p>Keep something at bay</p>
            <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add New Campground</a>
          
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <div class="col-lg-12">
            <h3>Our most popular Campgrounds!</h3>
        </div>
        <% campgrounds.forEach(campgrounds => {%>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img id= "smi"src= "<%= campgrounds.image %>">
                    <div class="caption">
                        <h4><%= campgrounds.name%></h4>
                    </div>
                    <p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campgrounds._id %> ">More info</a>
                    </p>
                </div>  
                
            </div>     
       
            
        <% }); %>
    </div>



